<h1>Listing posts</h1>

<table>
  <tr>
    <th>Kod</th>
    <th>Ev sahibi</th>
    <th>Misafir</th>
    <th>Tahmin</th>
    <th>Oran</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.kod %></td>
    <td><%= post.ev_sahibi %></td>
    <td><%= post.misafir %></td>
    <td><%= post.tahmin %></td>
    <td><%= post.oran %></td>
    <td><%= post.user_id %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

