<table class="borderedside">
  <tr>
    <th>Yazar</th>
		<th>Puan</th>
		 </tr>

<% @users.each do |user| %>

	<% toplam = user.posts.count %>
	<% puan = user.posts.where(:sonuc => true) %>
	<% tutan = user.posts.count(:conditions => { :sonuc => true }) %>
	<% orans = puan.aylik.sum(:oran) %>
	<% aylik_puan = orans.to_i + (tutan * 2) + toplam %>

	 <% if toplam > 0 && tutan > 0 %>
		 <tr>
			  <td ><%= user.username %></td>
			  <td ><%= aylik_puan %></td>
		 </tr>
	 <% end %>
 
 <% end %>

</table>
